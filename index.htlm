<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fruzz ‚Äî Boutique</title>
    <style>
        :root{--accent:#ff6600;--accent-dark:#e65c00;--bg:#fff9f2;--card:#fff;--muted:#6b6b6b;--radius:12px}
        *{box-sizing:border-box}
        body{margin:0;font-family:Inter, system-ui, -apple-system, 'Segoe UI', Roboto, Arial;background:linear-gradient(180deg,#fffefb,#fff7ee);color:#111; line-height: 1.5;}
        header{display:flex;align-items:center;justify-content:space-between;padding:18px 22px;background:var(--card);box-shadow:0 6px 18px rgba(17,17,17,0.06);position:sticky;top:0;z-index:5}
        .brand{display:flex;gap:12px;align-items:center}
        .logo{width:56px;height:56px;border-radius:10px;background:linear-gradient(135deg,var(--accent),#ffd24d);display:flex;align-items:center;justify-content:center;font-size:26px;color:white}
        .searchBar{display:flex;gap:8px;align-items:center}
        .searchBar input{padding:10px 12px;border-radius:8px;border:1px solid #eee;width:320px}
        main{display:grid;grid-template-columns:1fr 380px;gap:20px;padding:20px}
        @media (max-width:980px){main{grid-template-columns:1fr} .aside{order:2}}
        .catalog{display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:18px}
        .card{background:var(--card);padding:14px;border-radius:12px;box-shadow:0 6px 18px rgba(17,17,17,0.06);display:flex;flex-direction:column;gap:10px}
        
        /* MODIFI√â : Remplacement de .thumb par une classe pour l'image */
        .card .thumb-img{height:160px; width: 100%; border-radius:8px;background:#faf6f2; object-fit: cover;}

        .meta{display:flex;justify-content:space-between;align-items:center}
        .price{font-weight:700;color:var(--accent)}
        .btn{background:var(--accent);color:white;padding:10px;border-radius:10px;border:none;cursor:pointer; font-family: inherit; font-size: 15px;}
        .btn:hover{background: var(--accent-dark);}
        .btn.secondary{background:#f3f3f3;color:#333}
        .btn.secondary:hover{background: #e9e9e9;}
        .aside{position:sticky;top:94px;background:var(--card);padding:16px;border-radius:12px;box-shadow:0 6px 18px rgba(17,17,17,0.06)}
        .cart-item{display:flex;gap:10px;align-items:center;padding:10px 0;border-bottom:1px solid #f3f3f3}
        .qty{display:flex;gap:6px;align-items:center}
        .small{font-size:13px}
        .muted{color:var(--muted)}
        .product-page{background:var(--card);padding:16px;border-radius:12px}
        .row{display:flex;gap:12px}

        /* NOUVEAU : Style pour la modale de validation de commande */
        .modal{position:fixed;inset:0;background:rgba(0,0,0,0.5);display:none;align-items:center;justify-content:center;padding:20px; z-index: 10;}
        .modal .box{background:white;border-radius:12px;padding:24px;max-width:600px;width:100%; max-height: 90vh; overflow-y: auto;}
        .modal-header{display:flex; justify-content: space-between; align-items: center; margin-bottom: 16px; border-bottom: 1px solid #eee; padding-bottom: 12px;}

        footer{padding:16px;text-align:center;color:var(--muted)}
        form label{display: block; margin-top: 10px; font-weight: 600; font-size: 14px;}
        form input, form textarea, form select{width:100%;padding:10px;margin-top:4px;border-radius:8px;border:1px solid #eee; font-family: inherit;}
        .order-success{background:linear-gradient(90deg,#eaffef,#fff);padding:12px;border-radius:10px;margin-top:12px}
    </style>
</head>
<body>

<header>
    <div class="brand">
        <div class="logo">üçç</div>
        <h1>Fruzz Boutique</h1>
    </div>
    <div class="searchBar" role="search">
        <input id="searchInput" placeholder="Rechercher des boissons, ex: mangue, pack..." aria-label="Rechercher produits">
        <button id="searchBtn" class="btn secondary small">Rechercher</button>
    </div>
    <div style="display:flex;gap:10px;align-items:center">
        <button id="ordersClear" class="small">Supprimer commandes</button>
        <button id="openCart" class="btn">Panier (<span id="headerCount">0</span>)</button>
    </div>
</header>

<main>
    <section aria-label="Catalogue des produits">
        <h2>Produits</h2>
        <p class="muted">Cliquez sur un produit pour voir les d√©tails</p>
        <div id="catalog" class="catalog" aria-live="polite"></div>
    </section>

    <aside class="aside" aria-label="Panier et commande">
        <h3>Panier</h3>
        <div id="cartItems"></div>
        <div style="display:flex;justify-content:space-between;margin-top:10px; font-weight: bold;">
            <div>Sous-total</div>
            <div id="subtotal">0,00 ‚Ç¨</div>
        </div>
        <div style="margin-top:12px">
            <button id="checkoutBtn" class="btn" style="width:100%">Passer √† la caisse</button>
        </div>
        <div id="ordersHistory" style="margin-top:24px">
            <h4>Commandes r√©centes</h4>
            <div id="ordersList" class="small muted">Aucune commande</div>
        </div>
    </aside>
</main>

<footer>
    Prototype e‚Äëcommerce ‚Äî donn√©es stock√©es localement ‚Ä¢ Fruzz 2025
</footer>

<div id="checkoutModal" class="modal">
    <div class="box">
        <div class="modal-header">
            <h2>Valider la commande</h2>
            <button id="closeCheckoutModal" class="btn secondary small">Fermer</button>
        </div>

        <h4>R√©capitulatif de votre panier</h4>
        <div id="checkoutSummary"></div>
        <div style="display:flex;justify-content:space-between;margin-top:10px; font-weight: bold; font-size: 1.2em; border-top: 1px solid #eee; padding-top: 10px;">
            <div>Total √† payer</div>
            <div id="checkoutTotal">0,00 ‚Ç¨</div>
        </div>

        <h4 style="margin-top: 24px;">Informations de livraison</h4>
        <form id="checkoutForm">
            <label for="cName">Nom complet *</label>
            <input id="cName" required aria-required="true" />

            <label for="cEmail">E‚Äëmail *</label>
            <input id="cEmail" type="email" required />

            <label for="cPhone">T√©l√©phone *</label>
            <input id="cPhone" type="tel" required />

            <label for="cAddress">Adresse compl√®te *</label>
            <textarea id="cAddress" rows="3" required></textarea>

            <label for="cPayment">M√©thode de paiement</label>
            <select id="cPayment">
                <option value="cod">Paiement √† la livraison</option>
                <option value="card">Carte de cr√©dit (simul√©)</option>
            </select>
            
            <div style="margin-top:20px">
                <button type="submit" class="btn" style="width:100%; padding: 12px;">Confirmer la commande</button>
            </div>
        </form>
    </div>
</div>

<script>
// ====== Donn√©es produits (MODIFI√â : ajout de la cl√© 'image') ======
const PRODUCTS = [
    {id:'f1', title:'Fruzz Orange 33cl', price:1.5, flavors:['Orange'], stock:120, desc:'Boisson p√©tillante go√ªt orange.', image: 'https://images.unsplash.com/photo-1611080512343-a5b2a472c64d?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb&w=600'},
    {id:'f2', title:'Fruzz Ananas 33cl', price:1.5, flavors:['Ananas'], stock:80, desc:'Saveur ananas exotique et rafra√Æchissante.', image: 'https://images.unsplash.com/photo-1550258987-190a2d41a8ba?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb&w=600'},
    {id:'f3', title:'Fruzz Mangue 33cl', price:1.5, flavors:['Mangue'], stock:100, desc:'Le go√ªt authentique d\'une mangue juteuse et sucr√©e.', image: 'https://images.unsplash.com/photo-1591073137517-82414789553a?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb&w=600'},
    {id:'pack6', title:'Pack Mix 6x33cl', price:8.0, flavors:['Mix', 'orange', 'ananas', 'mangue'], stock:50, desc:'Un assortiment de nos meilleures saveurs. Contient 2x Orange, 2x Ananas, 2x Mangue.', image: 'https://images.unsplash.com/photo-1553530689-73b312a7f5b3?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb&w=600'}
];

// ====== Utils ======
const CART_KEY = 'fruzz_cart_v2';
const ORDERS_KEY = 'fruzz_orders_v2';
const $ = id => document.getElementById(id);

function formatEUR(n){
    return n.toLocaleString('fr-FR',{style:'currency',currency:'EUR'});
}

function sanitize(s){
    if(s==null) return '';
    return String(s).replace(/</g,'&lt;').replace(/>/g,'&gt;');
}

// ====== Catalog render (MODIFI√â : pour utiliser les images) ======
const catalog = $('catalog');
function renderCatalog(q=''){
    catalog.innerHTML='';
    const query = String(q||'').toLowerCase();
    const list = PRODUCTS.filter(p=> p.title.toLowerCase().includes(query) || p.flavors.join(' ').toLowerCase().includes(query));

    if (list.length === 0) {
        catalog.innerHTML = '<p>Aucun produit ne correspond √† votre recherche.</p>';
        return;
    }

    list.forEach(p=>{
        const card = document.createElement('article');
        card.className='card';

        // Utilisation d'une balise <img> pour l'image du produit
        const thumb = document.createElement('img');
        thumb.className = 'thumb-img';
        thumb.src = p.image;
        thumb.alt = p.title;

        const title = document.createElement('div');
        title.textContent = p.title;
        title.style.fontWeight='600';
        
        const desc = document.createElement('div');
        desc.className='small muted';
        desc.textContent = p.desc;
        
        const meta = document.createElement('div');
        meta.className='meta';
        
        const price = document.createElement('div');
        price.className='price';
        price.textContent = formatEUR(p.price);
        
        const btn = document.createElement('button');
        btn.className='btn';
        btn.textContent='Ajouter au panier';
        btn.addEventListener('click', ()=> addToCart(p.id, 1));
        
        meta.appendChild(price);
        meta.appendChild(btn);
        
        card.appendChild(thumb);
        card.appendChild(title);
        card.appendChild(desc);
        card.appendChild(meta);
        
        catalog.appendChild(card);
    });
}

// ====== Cart operations (persist√©) ======
function loadCart(){ try{ return JSON.parse(localStorage.getItem(CART_KEY)) || {}; }catch(e){ return {}; } }
function saveCart(c){ localStorage.setItem(CART_KEY, JSON.stringify(c)); }
function clearCart(){ localStorage.removeItem(CART_KEY); renderCart(); }

function addToCart(id, qty=1){
    const cart = loadCart();
    cart[id] = (cart[id]||0) + qty;
    saveCart(cart);
    renderCart();
}

function updateQty(id, qty){
    const cart = loadCart();
    if(qty<=0) delete cart[id];
    else cart[id]=qty;
    saveCart(cart);
    renderCart();
}

function removeFromCart(id){
    const cart = loadCart();
    delete cart[id];
    saveCart(cart);
    renderCart();
}

function cartTotals(){
    const cart = loadCart();
    let total=0, count=0;
    for(const id in cart){
        const p = PRODUCTS.find(x=>x.id===id);
        if(!p) continue;
        total += p.price * cart[id];
        count += cart[id];
    }
    return {total,count};
}

// ====== Cart render (MODIFI√â : pour inclure une petite image) ======
function renderCart(){
    const el = $('cartItems');
    el.innerHTML='';
    const cart = loadCart();
    const keys = Object.keys(cart);

    if(keys.length===0){
        el.innerHTML='<div class="small muted">Votre panier est vide</div>';
    } else {
        keys.forEach(id=>{
            const p = PRODUCTS.find(x=>x.id===id);
            if(!p) return;
            const row = document.createElement('div');
            row.className='cart-item';

            // Petite image du produit dans le panier
            const img = document.createElement('img');
            img.src = p.image;
            img.alt = p.title;
            img.style.width = '40px';
            img.style.height = '40px';
            img.style.borderRadius = '4px';
            img.style.objectFit = 'cover';

            const info = document.createElement('div');
            info.style.flex='1';
            
            const title = document.createElement('div');
            title.textContent = p.title;
            title.style.fontWeight='600';
            
            const meta = document.createElement('div');
            meta.className='small muted';
            meta.textContent = `${cart[id]} x ${formatEUR(p.price)}`;
            
            info.appendChild(title);
            info.appendChild(meta);
            
            const controls = document.createElement('div');
            controls.style.textAlign='right';
            
            const remove = document.createElement('button');
            remove.textContent='Supprimer';
            remove.className='small';
            remove.style.color = '#cc0000';
            remove.style.border = 'none';
            remove.style.background = 'none';
            remove.style.cursor = 'pointer';
            remove.addEventListener('click', ()=> removeFromCart(id));

            controls.appendChild(remove);

            row.appendChild(img);
            row.appendChild(info);
            row.appendChild(controls);
            el.appendChild(row);
        });
    }

    const tot = cartTotals();
    $('subtotal').textContent = formatEUR(tot.total);
    $('headerCount').textContent = tot.count;

    // Met √† jour le bouton de passage √† la caisse pour le d√©sactiver si le panier est vide
    $('checkoutBtn').disabled = tot.count === 0;
}

// ====== Orders ======
function loadOrders(){ try{ return JSON.parse(localStorage.getItem(ORDERS_KEY)) || []; }catch(e){ return []; } }
function saveOrders(o){ localStorage.setItem(ORDERS_KEY, JSON.stringify(o)); }

function renderOrders(){
    const out = $('ordersList');
    const orders = loadOrders();
    if(orders.length===0){
        out.textContent = 'Aucune commande';
        out.className='small muted';
        return;
    }
    out.innerHTML = '';
    orders.slice().reverse().forEach(ord=>{
        const box = document.createElement('div');
        box.style.borderTop='1px solid #f3f3f3';
        box.style.padding='8px 0';
        box.innerHTML = `<div style="font-weight:600">Commande #${sanitize(ord.id)}</div>
                         <div class="small muted">${sanitize(ord.summary)}</div>
                         <div class="small">Total: ${formatEUR(ord.total)}</div>`;
        out.appendChild(box);
    });
}

// ====== NOUVEAU : Checkout flow (flux de validation) ======
function openCheckoutModal(){
    if(Object.keys(loadCart()).length === 0){
        alert('Votre panier est vide. Ajoutez au moins un produit.');
        return;
    }
    
    // Remplir le r√©capitulatif
    const summaryEl = $('checkoutSummary');
    summaryEl.innerHTML = '';
    const cart = loadCart();
    for(const id in cart) {
        const p = PRODUCTS.find(x => x.id === id);
        if(!p) continue;
        const itemDiv = document.createElement('div');
        itemDiv.style.display = 'flex';
        itemDiv.style.justifyContent = 'space-between';
        itemDiv.style.padding = '4px 0';
        itemDiv.innerHTML = `<span>${cart[id]}x ${sanitize(p.title)}</span> <span>${formatEUR(p.price * cart[id])}</span>`;
        summaryEl.appendChild(itemDiv);
    }
    
    // Mettre √† jour le total
    const totals = cartTotals();
    $('checkoutTotal').textContent = formatEUR(totals.total);

    $('checkoutModal').style.display='flex';
}

function closeCheckoutModal() {
    $('checkoutModal').style.display='none';
}

function validateEmail(e){ return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(e); }

$('checkoutForm').addEventListener('submit', function(ev){
    ev.preventDefault();
    const name = sanitize($('cName').value.trim());
    const email = sanitize($('cEmail').value.trim());
    const phone = sanitize($('cPhone').value.trim());
    const address = sanitize($('cAddress').value.trim());
    const payment = sanitize($('cPayment').value);

    if(!name||!email||!phone||!address){
        alert('Veuillez remplir tous les champs obligatoires.');
        return;
    }
    if(!validateEmail(email)){
        alert('Adresse e-mail invalide.');
        return;
    }

    // Cr√©er l'objet commande
    const cart = loadCart();
    const items = [];
    let total=0;
    for(const id in cart){
        const p = PRODUCTS.find(x=>x.id===id);
        if(!p) continue;
        items.push({id:p.id, title:p.title, qty:cart[id], price:p.price});
        total += p.price * cart[id];
    }
    
    const orders = loadOrders();
    const orderId = 'FRZ' + Date.now().toString().slice(-6);
    const order = {
        id: orderId,
        date: new Date().toLocaleString('fr-FR'),
        name, email, phone, address, payment,
        items, total,
        summary: items.map(it=> `${it.qty}x ${it.title}`).join(', ')
    };
    
    orders.push(order);
    saveOrders(orders);

    // MODIFI√â : Cr√©er le lien mailto: pour envoyer l'e-mail
    let emailBody = `Bonjour,\n\nUne nouvelle commande a √©t√© pass√©e sur la boutique Fruzz.\n\n`;
    emailBody += `--- D√âTAILS DE LA COMMANDE ---\n`;
    emailBody += `ID Commande: ${order.id}\n`;
    emailBody += `Date: ${order.date}\n`;
    emailBody += `Total: ${formatEUR(order.total)}\n`;
    emailBody += `Paiement: ${order.payment === 'cod' ? '√Ä la livraison' : 'Carte de cr√©dit'}\n\n`;
    
    emailBody += `--- INFORMATIONS CLIENT ---\n`;
    emailBody += `Nom: ${order.name}\n`;
    emailBody += `Email: ${order.email}\n`;
    emailBody += `T√©l√©phone: ${order.phone}\n`;
    emailBody += `Adresse de livraison:\n${order.address}\n\n`;

    emailBody += `--- ARTICLES COMMAND√âS ---\n`;
    order.items.forEach(item => {
        emailBody += `- ${item.qty}x ${item.title} (${formatEUR(item.price)} l'unit√©) = ${formatEUR(item.qty * item.price)}\n`;
    });
    
    emailBody += `\nMerci.`;

    const mailtoLink = `mailto:contactfruzz@gmail.com?subject=${encodeURIComponent('Nouvelle Commande Fruzz #' + order.id)}&body=${encodeURIComponent(emailBody)}`;

    // Vider le panier
    clearCart();
    renderOrders();
    closeCheckoutModal();

    // Afficher confirmation et rediriger vers le client mail
    alert(`Commande #${order.id} confirm√©e !\nVous allez √™tre redirig√© vers votre application d'e-mail pour envoyer la confirmation.`);
    window.location.href = mail      border-radius: 10px;
      margin-bottom: 20px;
    }
    input, select, textarea {
      width: 100%;
      padding: 10px;
      margin-top: 10px;
      margin-bottom: 20px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }
    button {
      background-color: #ff6600;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background-color: #e65c00;
    }
    .confirmation {
      background-color: #dff0d8;
      color: #3c763d;
      padding: 15px;
      border-radius: 10px;
      margin-top: 20px;
      display: none;
    }
    @media (max-width: 600px) {
      nav {
        flex-direction: column;
        align-items: center;
      }
    }
  </style>
</head>
<body>

<header>
  <h1>üçç Fruzz Tropical Boost</h1>
  <p id="slogan">Commandez votre boisson √©nergisante fruit√©e !</p>
</header>

<nav>
  <a href="#produit">Produit</a>
  <a href="#commande">Commande</a>
  <a href="#contact">Contact</a>
  <select onchange="changerLangue(this.value)">
    <option value="fr">FR</option>
    <option value="en">EN</option>
  </select>
</nav>

<div class="container">
  <div class="product" id="produit">
    <h2 id="titreProduit">Fruzz Tropical Boost</h2>
    <p id="saveurs">Saveurs : Orange, Ananas, Mangue</p>
    <p id="prix">Prix : 1,50 ‚Ç¨</p>
  </div>

  <form id="commandeForm">
    <h2 id="titreCommande">üõí Passer une commande</h2>
    <label for="name" id="labelNom">Nom complet :</label>
    <input type="text" id="name" name="name" required>

    <label for="email" id="labelEmail">Adresse e-mail :</label>
    <input type="email" id="email" name="email" required>

    <label for="quantity" id="labelQuantite">Quantit√© :</label>
    <select id="quantity" name="quantity">
      <option value="1">1 canette</option>
      <option value="6">Pack de 6</option>
      <option value="12">Pack de 12</option>
    </select>

    <label for="message" id="labelMessage">Instructions ou adresse :</label>
    <textarea id="message" name="message" rows="4"></textarea>

    <button type="submit" id="btnCommander">Commander</button>
  </form>

  <div class="confirmation" id="confirmationMessage">
    <h3>‚úÖ Commande confirm√©e !</h3>
    <p id="details"></p>
  </div>

  <div class="contact" id="contact">
    <h2 id="titreContact">üìû Contact</h2>
    <p id="contactTexte">Pour toute question, √©crivez-nous √† : <strong>contact@fruzz.com</strong></p>
  </div>
</div>

<script>
  document.getElementById("commandeForm").addEventListener("submit", function(event) {
    event.preventDefault();

    const name = document.getElementById("name").value;
    const email = document.getElementById("email").value;
    const quantity = document.getElementById("quantity").value;
    const message = document.getElementById("message").value;

    const details = `
      Merci <strong>${name}</strong> !<br>
      Votre commande de <strong>${quantity}</strong> Fruzz est enregistr√©e.<br>
      Nous vous contacterons √† : <strong>${email}</strong><br>
      Adresse / instructions : ${message}
    `;

    document.getElementById("details").innerHTML = details;
    document.getElementById("confirmationMessage").style.display = "block";
    document.getElementById("commandeForm").reset();
  });

  function changerLangue(langue) {
    if (langue === "en") {
      document.getElementById("slogan").textContent = "Order your fruity energy drink!";
      document.getElementById("titreProduit").textContent = "Fruzz Tropical Boost";
      document.getElementById("saveurs").textContent = "Flavors: Orange, Pineapple, Mango";
      document.getElementById("prix").textContent = "Price: ‚Ç¨1.50";
      document.getElementById("titreCommande").textContent = "üõí Place an order";
      document.getElementById("labelNom").textContent = "Full name:";
      document.getElementById("labelEmail").textContent = "Email address:";
      document.getElementById("labelQuantite").textContent = "Quantity:";
      document.getElementById("labelMessage").textContent = "Instructions or address:";
      document.getElementById("btnCommander").textContent = "Order";
      document.getElementById("titreContact").textContent = "üìû Contact";
      document.getElementById("contactTexte").textContent = "For any questions, write to us at: contact@fruzz.com";
    } else {
      document.getElementById("slogan").textContent = "Commandez votre boisson √©nergisante fruit√©e !";
